<h1>Listing users</h1>

<%= link_to 'New user', new_user_path %>

<% if @users.any? %>
<table>
  <tr>
    
    <th>email</th>
    <th colspan="3"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to 'Destroy', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<% else %><br/ >
  No record found.
<% end %>
