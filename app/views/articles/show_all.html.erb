  <%= paginate @articles %>

  <% if @articles.any? %>
  
  <% @articles.each do |article| %>
    
      <h2><strong>Title:</strong></h2>
      <%= article.title %></br>

      <h2><strong>Article:</strong></h2>
      <%= article.text %></br>

      <h3>Comments</h3>
      
      <div id='comment_<%= article.id%>'>
        <% article.comments.each do |c| %>
      
          <%= render 'comments/all_comment', :locals => @comment = c %>
  
        <% end %>
      </div>

  <%= form_for([article, article.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Post'%>
    </p>
  <% end %>
      <hr/>
    
  <% end %>

  <% else %><br/ >
      No Articles Found.
  <% end %>

  <%= paginate @articles %>